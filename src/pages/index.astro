---
import Layout from '../layouts/Layout.astro';
import Header from '../components/header/Header.astro';
import Hero from '../components/hero/Hero.astro';
import Slider from '../components/slider/Slider.astro';
import Posts from '../components/posts/Posts.astro';
import Services from '../components/services/Services.astro';
import Twitch from '../components/twitch/Twitch.astro';
import Footer from '../components/footer/Footer.astro';
---

<script>
  const toogle = document.querySelector('.toogle') as HTMLButtonElement;
  const nav = document.querySelector('.nav') as HTMLDivElement;

  toogle.addEventListener('click', () => {
    const classValues = nav.getAttribute('class');

    if (classValues?.includes('nav--active')) {
      nav.classList.remove('nav--active');
      return;
    }
    nav.classList.add('nav--active');
  });
</script>

